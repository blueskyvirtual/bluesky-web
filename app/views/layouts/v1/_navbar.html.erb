<header>
  <nav class="navbar <%= content_for?(:navbar_class) ? yield(:navbar_class) : 'navbar-bluesky navbar-dark' %> navbar-expand-lg fixed-top">
    <%= link_to root_path, class: 'navbar-brand' do %>
      <%= image_tag 'blueskyv2-icon.png', width: 30, height: 30, class: 'd-inline-block align-top', alt: '' %>
      BlueSky Virtual
    <% end %>

    <div class="collapse navbar-collapse flex-sm-row" id="navbarContent">
      <% unless user_signed_in? %>
        <ul class="navbar-nav text-uppercase">
          <li>
            <%= link_to 'Features', "#{root_path}#features", class: 'nav-link scroll-to' %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarInfoDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Information
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarInfoDropdownMenuLink">
              <a class="dropdown-item" href="#">News</a>
              <a class="dropdown-item" href="#">NOTAMS</a>
              <a class="dropdown-item" href="#">Users logged in</a>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarFlightsDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Flights
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarFlightsDropdownMenuLink">
              <a class="dropdown-item" href="#">Airlines</a>
              <a class="dropdown-item" href="#">Schedule</a>
              <a class="dropdown-item" href="#">Live Map</a>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarPeopleDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              People
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarPeopleDropdownMenuLink">
              <%= link_to 'Roster', users_path, class: 'dropdown-item' %>
              <a class="dropdown-item" href="#">Awards</a>
              <a class="dropdown-item" href="#">Statistics</a>
            </div>
          </li>
          <li>
            <%= link_to 'Join', new_user_registration_path, class: 'nav-link' %>
          </li>
          <li>
            <%= link_to 'Contact', "#{root_path}#contact", class: 'nav-link scroll-to' %>
          </li>
        </ul>

        <ul class="navbar-nav text-uppercase ml-auto">
          <li>
            <%= link_to 'Login', new_user_session_path, class: 'btn btn-success' %>
          </li>
        </ul>
      <% end %>
    </div>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </nav>
</header>
