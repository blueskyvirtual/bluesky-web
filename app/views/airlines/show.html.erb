<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h3><%= @airline.name %> (<%= @airline.icao %>)</h3>
    </div>
    <div class="col-sm-6 text-right align-self-center">
      <% if policy(Airline::Flight).new? -%>
        <%= link_to new_airline_flight_path(@airline), class: 'btn btn-sm btn-success' do %>
          <%= fa_icon 'plus' %> Add Flight
        <% end %>
      <% end -%>

      <% if policy(@airline).update? -%>
        <%= link_to edit_airline_path(@airline), class: 'btn btn-sm btn-secondary' do %>
          <%= fa_icon 'edit' %> Edit
        <% end %>
      <% end -%>
    </div>
  </div>

  <div class="row">
    <table class="table table-sm table-bordered small">
      <thead>
      <tr class="bg-primary text-white text-uppercase">
        <th scope="col">Route Map</th>
      </tr>
      </thead>
      <tbody>
        <tr>
          <td colspan="10" id="airline-route-map">
            Loading route map
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row">

  </div>
</div>
