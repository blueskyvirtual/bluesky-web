<%= content_for(:title, "Edit #{@airline.name}") %>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h3><%= @airline.name %> (<%= @airline.icao %>)</h3>
    </div>
    <div class="ml-auto text-right">
      <% if policy(@airline).destroy? -%>
        <%= link_to airline_path(@airline), method: :delete, class: 'btn btn-sm btn-danger', 'data-confirm': "Are you sure you want to completely delete #{@airline.name}? This will remove ALL associated records." do %>
          <%= fa_icon 'trash' %> Delete
        <% end %>
      <% end -%>
    </div>

  </div>

  <div class="row">
    <%= render partial: 'form' %>
  </div>
</div>