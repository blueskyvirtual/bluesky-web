<div class="row pt-2 text-uppercase">
  <div class="col-md-6">
    <h3><%= airport_code(@flight.origin) %></h3>

    <h4 class="text-primary">
      <%= @flight.origin.to_municipality_display %>
    </h4>

    <h6><%= @flight.origin.name %> (<%= @flight.origin.ident %>)</h6>
    <h5><%= time_display(find_time(@flight.origin, @flight.dep_time)) %></h5>
    <h6 class="text-muted"><%= time_display(@flight.dep_time) %></h6>
  </div>

  <div class="col-md-6 text-right">
    <h3><%= airport_code(@flight.destination) %></h3>

    <h4 class="text-primary">
      <%= @flight.destination.to_municipality_display %>
    </h4>

    <h6><%= @flight.destination.name %> (<%= @flight.destination.ident %>)</h6>
    <h5><%= time_display(find_time(@flight.destination, @flight.arv_time)) %></h5>
    <h6 class="text-muted"><%= time_display(@flight.arv_time) %></h6>
  </div>
</div>

<div class="row">
  <div class="col-md-12 text-center">
    <div class="progress">
      <div class="progress-bar bg-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <small>
      Scheduled duration <%= flight_duration(@flight) %>
    </small>
  </div>
</div>